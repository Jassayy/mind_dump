generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User{
  id         String     @id   @default(uuid())
  name       String      
  email      String     @unique
  password   String     
  createdAt  DateTime   @default(now())
  entry      Entry[]
}


model Entry{
  id         String    @id   @default(uuid())
  text       String  
  mood       String?
  createdAt  DateTime  @default(now())
  user       User      @relation(fields: [userId], references: [id])
  userId     String
}
